<div class="coverall"></div>
<div class="loading">
  <span class="bar"></span>
  <span id="loading-text">Loading...</span>
</div>
<div id="map"></div>
<div id="radio-list" class="steps"></div>
<div id="player-container">
  <label class="to-back-label" for="to-back"><i class="fa fa-bars fa-lg"></i></label>
  <input type="checkbox" id="to-back"><!-- playlist toggle -->
  <canvas id="progress" width="640" height="640"></canvas><!-- progress bar -->
  <div id="player">
  </div>
  <div id="flip-back">
    <ul class="playlist" id="other-radios">
      <h3>Otras radios</h3>
    </ul>
  </div><!-- #flip-back -->
</div>

<!-- http://codepen.io/larrygeams/pen/sutec -->
<script type="text/template" id="list-item-tpl">
      <input  id='label-<%= _id %>' type='checkbox' />
      <label for='label-<%= _id %>' class="desc-label <% if (onair) print('live') %>">
        <h2><%= name %> <span><%= desc %></span></h2>   
      </label>
</script>

<script type="text/template" id="player-front-tpl">
	<audio id="audio" controls></audio>
	<img class="radio-cover" src="<%= cover %>" />
	<label class="to-lyrics-label" for="to-lyrics"><i class="fa fa-caret-down fa-lg"></i></label>
	<input type="checkbox" id="to-lyrics"><!-- lyrics toggle -->
	<div class="cover">
          <h1><%= name %></h1>
	  <div class="controls">
	    <button id="backward" title="Tweet"><i class="fa fa-twitter-square fa-lg"></i></button>
	    <button id="play-pause" title="Play"><i class="fa fa-play fa-10x"></i></button>
	    <button id="backward" title="Backward"><i class="fa fa-facebook-square fa-lg"></i></button>
	    <input id="volume" name="volume" min="0" max="1" step="0.1" type="range" />
	  </div><!-- #controls -->
	  <div class="info">
	    <p id="player-radio"><a href="#" target="_blank"></a></p>
	    <p id="player-desc"><a href="#" target="_blank"></a></p>
	  </div><!-- #info -->
	  <div class="desc">
            <h1> <%= desc %></h1>
	  </div>
	  <p class="scroll">scroll down</p>
	</div><!-- #cover -->
</script>